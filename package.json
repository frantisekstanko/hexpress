{
  "name": "hexpress",
  "version": "0.1.0",
  "description": "Hexagonal architecture TypeScript backend template with Express",
  "main": "dist/server.js",
  "files": [
    "dist/Shared/**/*",
    "dist/User/**/*",
    "src/Shared/**/*",
    "src/User/**/*",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./Shared/*": {
      "types": "./dist/Shared/*",
      "import": "./dist/Shared/*"
    },
    "./User/*": {
      "types": "./dist/User/*",
      "import": "./dist/User/*"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register src/server.ts",
    "migrate": "ts-node -r tsconfig-paths/register scripts/migrate.ts",
    "check": "npm run check:compiler && npm run check:linter && npm run check:architecture",
    "check:compiler": "tsc --noEmit -p tsconfig.json",
    "check:linter": "eslint",
    "check:style": "tsconfig-alias-converter . && biome check",
    "check:architecture": "depcruise src --config .dependency-cruiser.cjs",
    "fix:style": "tsconfig-alias-converter . --write && biome check --write",
    "test": "jest",
    "test:unit": "jest --projects jest.config.unit.ts",
    "test:flow": "jest --projects jest.config.flow.ts",
    "test:adapter": "jest --projects jest.config.adapter.ts",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@frantisekstanko/assertion": "^0.5.0",
    "@types/ws": "^8.18.1",
    "argon2": "^0.44.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "email-validator": "^2.0.4",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "inversify": "^7",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.3",
    "pino": "^10.0.0",
    "reflect-metadata": "^0.2.2",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@eslint/js": "^9.36.0",
    "@frantisekstanko/tsconfig-alias-converter": "^0.2.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "dependency-cruiser": "^17.0.2",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "jiti": "^2.6.1",
    "pino-pretty": "^13.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "keywords": [
    "api",
    "typescript",
    "node"
  ],
  "author": "Frantisek Stanko",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  }
}
